    public void logOnClick(View view)  {       // user press button, with the onClick value logOnClick

        EditText myUserName = (EditText) findViewById(R.id.myTextField);    //texteditor is EditText sort, 
                                                                            // Get's the variable myUserName
                                                                            // find the id, with myTextField 
                                                                            // (EditText) convert it to EditText from View
                                                                            // the variable myUserName has now a value in EditText forma
                                                                            
                                                                            
        EditText myPassword= (EditText) findViewById(R.id.myPasswordField); // Same ^^^^^^



        Log.i("Info", myUserName.getText().toString());  //myUserName.getText().toString());  ////Varaible.metod(getText) then make it a tostring 
        
        Log.i("Info", myPassword.getText().toString());     //^^same 

        
    }
    
    
